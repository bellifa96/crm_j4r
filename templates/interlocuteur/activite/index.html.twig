{% extends 'base.html.twig' %}

{% block title %}Activite index{% endblock %}

{% block body %}

    <table class="table datatable">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Code</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for activite in activites %}
            <tr>
                <td>{{ activite.id }}</td>
                <td>{{ activite.titre }}</td>
                <td>{{ activite.code }}</td>
                <td>
                    <a href="{{ path('app_interlocuteur_activite_show', {'id': activite.id}) }}" class="btn btn-warning" style="font-size: 10px;">show</a>
                    <a href="{{ path('app_interlocuteur_activite_edit', {'id': activite.id}) }}"  class="btn btn-warning" style="font-size: 10px;" > <i class="bi bi-pencil"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
