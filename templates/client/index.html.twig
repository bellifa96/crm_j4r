{% extends 'base.html.twig' %}

{% block title %}Hello ClientController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="count">
		{{ pagination.getTotalItemCount }}
	</div>
	<table class="table">
		<thead  class="thead-dark">
			<tr>
				<th scope="col">Id</th>
				<th scope="col">Nom</th>
			</tr>
		</thead>
		<tbody>
			{% for client in pagination %}
				<tr {% if loop.index is odd %} class="color" {% endif %}>
					<td>{{ client.id }}</td>
					<td>{{ client.raisonSociale }}</td>
				</tr>
			{% endfor %}
		</tbody>

	</thead>
</table>
{# display navigation #}
<div class="navigation">
	{{ knp_pagination_render(pagination) }}
</div>{% endblock %}
