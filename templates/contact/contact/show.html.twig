{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    <style>


        .container {
            color: #0E4377;
        }

        .form-control:focus {
            box-shadow: none;
            border-color: #1ab2e4
        }

        .profile-button {
            background: #1ab2e4;
            box-shadow: none;
            border: none
        }

        .profile-button:hover {
            background: #1ab2e4
        }

        .profile-button:focus {
            background: #1ab2e4;
            box-shadow: none
        }

        .profile-button:active {
            background: #1ab2e4;
            box-shadow: none
        }

        .back:hover {
            color: #1ab2e4;
            cursor: pointer
        }

        .labels {
            font-size: 11px;
            color: #0E4377;
            font-weight: bold;
        }

        .add-service {
            color: black;
        }

        .add-service:hover {
            background: #BA68C8;
            color: #fff;
            cursor: pointer;
            border: solid 1px #BA68C8
        }
    </style>

    <div class="container rounded bg-white mt-5 mb-5">
        <div class="row">
            <div class="col-md-3 border-end">
                <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                    <img class="rounded-circle mt-5"
                         width="150px"
                         src="https://st3.depositphotos.com/15648834/17930/v/600/depositphotos_179308454-stock-illustration-unknown-person-silhouette-glasses-profile.jpg">
                    <span class="font-weight-bold" id="nom"> {{ contact.nom~" "~contact.prenom }}</span>
                    <span class="text-black-50"
                          id="societe">

                        <a href="{{ path('app_interlocuteur_interlocuteur_show',{'id':contact.societe.id}) }}">
                            {{ contact.societe.societe is not empty ? contact.societe.societe.raisonSociale : contact.societe.nom }}
                        </a>
                    </span>
                    <span> </span>
                </div>
            </div>
            <div class="col-md-5 border-end">
                <div class="p-3 py-5">
                    <div class="mb-3">
                        <h4 class="text-center">Fiche contact</h4>
                    </div>
                    <div class="row mt-2">
                        <div class="col-md-6"><label class="labels">Nom</label>
                            <div class=" form-control-sm-2 text-center">
                                {{ contact.nom }}
                            </div>
                        </div>
                        <div class="col-md-6"><label class="labels">Prénom</label>
                            <div class=" form-control-sm-2 text-center">
                                {{ contact.prenom }}
                            </div>
                        </div>
                        <div class="col-md-6"><label class="labels">Genre</label>
                            <div class=" form-control-sm-2 text-center">
                                {{ contact.genre }}
                            </div>
                        </div>
                        <div class="col-md-6"><label class="labels">Date de naissance</label>
                            <div class=" form-control-sm-2 text-center">
                                {{ contact.dateAnniversaire }}
                            </div>
                        </div>
                        <div class="col-md-6"><label class="labels">Téléphone mobile</label>
                            <div class=" form-control-sm-2 text-center">
                              <a href="tel:{{ contact.telephoneMobile }}">{{ contact.telephoneMobile }}</a>
                            </div>
                        </div>
                        <div class="col-md-6"><label class="labels">Téléphone fixe</label>
                            <div class=" form-control-sm-2 text-center">
                                <a href="tel:{{ contact.telephone }}"> {{ contact.telephone }}</a>
                            </div>
                        </div>
                        <div class="col-md-12"><label class="labels">Adresse 1</label>
                            <div class=" form-control-sm-2 text-center">
                                {{ contact.adresse1 }}
                            </div>
                        </div>
                        <div class="col-md-12"><label class="labels">Complément d'adresse</label>
                            <div class=" form-control-sm-2 text-center">
                                {{ contact.adresse2 }}
                            </div>
                        </div>
                        <div class="col-md-6"><label class="labels">Code postal</label>
                            <div class=" form-control-sm-2 text-center">
                                {{ contact.codePostal }}
                            </div>
                        </div>
                        <div class="col-md-6"><label class="labels">Ville</label>
                            <div class=" form-control-sm-2 text-center">
                                {{ contact.ville }}
                            </div>
                        </div>
                        <div class="col-md-12"><label class="labels">Pays</label>
                            <div class=" form-control-sm-2 text-center">
                                {{ contact.pays }}
                            </div>
                        </div>
                        <div class="col-md-12"><label class="labels">Email</label>
                            <div class=" form-control-sm-2 text-center">
                                <a href = "mailto: {{ contact.email }}">{{ contact.email }}</a>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="p-3 py-5">
                    <br>
                    <div class="col-md-12"><label class="labels">Service</label>
                        <div class=" form-control-sm-2 text-center">
                            {{ contact.service.titre }}
                        </div>
                    </div>
                    <br>
                    <div class="col-md-12"><label class="labels">Fonction</label>
                        <div class=" form-control-sm-2 text-center">
                            {{ contact.fonction }}
                        </div>
                    </div>
                    <div class="col-md-12"><label class="labels">Autres Informations</label>
                        <div class=" form-control-sm-2 text-center">
                            {{ contact.commentaire }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
