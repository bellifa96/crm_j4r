{% extends 'base.html.twig' %}

{% block title %}Contact index{% endblock %}

{% block body %}
    <h1>Contact index</h1>

    <table class="table text-center">
        <thead>
        <tr class="tr-head">
            <th>Interlocuteur</th>
            <th>Nom</th>
            <th>Prenom</th>
            <th>Email</th>
            <th>TelephoneMobile</th>
            <th>Telephone</th>
            <th>DateAnniversaire</th>
        </tr>
        </thead>
        <tbody>
        {% for contact in contacts %}
            <tr>
                <td>
                    <a href="{{ path('app_interlocuteur_interlocuteur_show',{"id":contact.societe.id}) }}">
                        {{ contact.societe.societe is not empty ? contact.societe.societe.raisonSociale : contact.societe.personne.nom~" "~contact.societe.personne.prenom }}
                    </a>
                </td>
                <td>
                    <a href="{{ path('app_contact_contact_show',{"id":contact.id}) }}">
                        {{ contact.nom }}
                    </a>
                </td>
                <td>{{ contact.prenom }}</td>
                <td>{{ contact.email }}</td>
                <td>{{ contact.telephoneMobile }}</td>
                <td>{{ contact.telephone }}</td>
                <td>{{ contact.dateAnniversaire }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
