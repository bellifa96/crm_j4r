<div class="col-md-12 page-block mt-4">
    {{ form_start(form) }}

    <div class="row">
        <div class="col-md-6">
            <div class="col-md-3">
                Titre
            </div>
            <div class="-col-md-9">
                {{ form_widget(form.titre,{'attr':{'class':'form-control'}}) }}

            </div>
        </div>

        <div class="col-md-6">
            <div class="col-md-3">
                Couleur
            </div>
            <div class="-col-md-9">
                {{ form_widget(form.couleur,{'attr':{'class':'form-control'}}) }}
            </div>
        </div>
        <div class="col-md-6">
        </div>

        <div class="col-md-6">
            <div class="col-md-3">
                Couleur Text
            </div>
            <div class="-col-md-9">
                {{ form_widget(form.couleurText,{'attr':{'class':'form-control'}}) }}
            </div>
        </div>


    </div>

    {{ form_widget(form) }}
    <button class="btn btn-info mt-2" type="submit">{{ button_label|default('Enregistrer') }}</button>

    {{ form_end(form) }}


    {% if is_granted("ROLE_ADMIN") and type_ouvrage.id is not empty %}

        {{ include('affaire/type_ouvrage/_delete_form.html.twig') }}

    {% endif %}

</div>

