<li>
<div class="elements" id="element-{{ composant.id }}" type="composant">

    <div class="css-1ip68u77">
        <div class="css-1r30cbj">
            <div class="tab-el-left"></div>
            <div class="tab-el-left">

                {% if composant.denomination is not empty %}
                <input style="width:{{ composant.typeComposant.titre == "Location" ? '40% !important' : '100%'}}" type="text"  id="devis_composants_{{ composant.id }}_denomination" input="denomination"
                       element="composants" composants="{{ composant.id }}" disabled value="{{composant.denomination}}"
                       name="devis[composants][{{ composant.id }}][denomination]" required="required" 
                       class="chakra-input " placeholder="Dénomination" />

                {% if composant.typeComposant.titre == "Location" %}
                    <input style="width:30% !important" type="text" id="devis_composants_{{ composant.id }}_quantite2" input="quantite2"
                        name="devis[composants][{{ composant.id }}][quantite2]" required="required" maxlength="255"
                        element="composants" composants="{{ composant.id }}" class="chakra-input numbers dtht-composant text-center"
                        placeholder="Quantité2"
                        value="{{ composant.quantite2 }}">

                    <select style="width:30% !important" id="devis_composants_{{ composant.id }}_unite2" name="devis[composants][{{ composant.id }}][unite2]" class="text-center col-md-12 chakra-input" required  input="unite2" element="composants"  composants="{{ composant.id }}">
                            {% set isSelected = false %}
                            {% for unite in unites %}
                                <option value="{{unite.id}}"
                                    {% if unite == composant.unite %}
                                            selected
                                            {% set isSelected = true %}
                                    {% endif %}
                                > {{ unite.label}}</option>
                            {% endfor %}
                            <option disabled {{ composant.unite2 is empty or isSelected == false ? "selected" : ""}}>Unité 2</option>
                    </select>
                {% endif %}
                {% else %}
                <select  id="devis_composants_{{ composant.id }}_denomination" input="denomination"
                       element="composants" composants="{{ composant.id }}"
                       name="devis[composants][{{ composant.id }}][denomination]" required="required" 
                       class="chakra-input" placeholder="Dénomination" >
                        <option disabled selected> Veuillez selectionner un composant </option>

                       {% for option in options %}

                         <option value="{{option.id}}"> {{ option.denomination }} </option>

                       {% endfor %}
                        <option value="Autre"> Autre </option>

                </select>

                {% endif %}
            </div>
            <div class="tab-el-right">
                <input  type="text" id="devis_composants_{{ composant.id }}_quantite" input="quantite"
                       name="devis[composants][{{ composant.id }}][quantite]" required="required" maxlength="255"
                       element="composants" composants="{{ composant.id }}" class="chakra-input numbers dtht-composant text-center"
                       placeholder="Quantité"
                       value="{{ composant.quantite }}">
            </div>
            <div class="tab-el-right">
               <select  id="devis_composants_{{ composant.id }}_unite" name="devis[composants][{{ composant.id }}][unite]" class="text-center col-md-12 chakra-input" required  input="unite" element="composants"  composants="{{ composant.id }}">
                        {% set isSelected = false %}
                        {% for unite in unites %}
                            <option value="{{unite.id}}"
                                {% if unite == composant.unite %}
                                        selected
                                        {% set isSelected = true %}
                                {% endif %}
                            > {{ unite.label}}</option>
                        {% endfor %}
                        <option disabled {{ composant.unite is empty or isSelected == false ? "selected" : ""}}>Unité</option>
                </select>
            </div>
            <div class="tab-el-right">
                <input type="text" id="devis_composants_{{ composant.id }}_debourseUnitaireHT" input="debourseUnitaireHT"
                       name="devis[composants][{{ composant.id }}][debourseUnitaireHT]" required="required" maxlength="255"
                       element="composants" composants="{{ composant.id }}" class="chakra-input numbers dtht-composant text-end"
                       placeholder="Déboursé U HT"
                       value="{{ composant.debourseUnitaireHT|number_format(2,'.',' ') }}">
            </div>
            <div class="tab-el-right">
                <input type="text" id="devis_composants_{{ composant.id }}_debourseTotalHT" disabled="disabled"
                    input="debourseTotalHT"
                    name="devis[composants][{{ composant.id }}][debourseTotalHT]" required="required" maxlength="255"
                    class="chakra-input text-end" placeholder="Déboursé Total HT"
                    value="{{  composant.debourseTotalHT|number_format(2,'.',' ') }}"
                >

            </div>
            <div class="tab-el-right">
                <input type="text" id="devis_composants_{{ composant.id }}_marge"
                       input="marge" element="composants" composants="{{ composant.id }}"
                       name="devis[composants][{{ composant.id }}][marge]" required="required" maxlength="255"
                       class="chakra-input text-center" placeholder="Marge"
                       value="{{ composant.marge|number_format(2,'.',' ') }}">
            </div>
            <div class="tab-el-right">
                <input type="text" id="devis_composants_{{ composant.id }}_prix_de_vente" disabled="disabled"
                       input="prixDeVente"
                       name="devis[composants][{{ composant.id }}][prixDeVente]" required="required" maxlength="255"
                       class="chakra-input  text-end" placeholder="Prix de vente"
                       value="{{ (composant.debourseUnitaireHT * composant.quantite * composant.marge)|number_format(2,'.',' ') }}">
            </div>
            <div class="tab-el-right row justify-content-center">
                <button class="btn btn-danger btn-sm rounded-0 col-md-auto delete-composant" id="delete-composant-{{composant.id}}" type="button" data-toggle="tooltip" data-placement="top" title="Delete" onclick="this.parentNode.style.display = 'none'"
><i class="fa fa-trash "></i>
</button>
            </div>
        </div>
    </div>
</div>
</li>