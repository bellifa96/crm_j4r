<li>
<div class="elements" id="element-{{ composant.id }}" type="composant">

    <div class="css-1ip68u77">
        <div class="css-1r30cbj">
            <div class="tab-el-left"></div>
            <div class="tab-el-left">
                <input type="text" id="devis_composants_{{ composant.id }}_code" input="code" element="composant"
                       composant="{{ composant.id }}" name="devis[composants][{{ composant.id }}][code]" required="required"
                       maxlength="255"
                       class="chakra-input" placeholder="Code" value="{{ composant.code }}">
            </div>
            <div class="tab-el-left">

                {% if composant.intitule is not empty %}
                <input type="text"  id="devis_composants_{{ composant.id }}_intitule" input="intitule"
                       element="composant" composant="{{ composant.id }}" disabled value="{{composant.intitule}}"
                       name="devis[composants][{{ composant.id }}][intitule]" required="required" 
                       class="chakra-input" placeholder="Dénomination" />
                {% else %}
                <select  id="devis_composants_{{ composant.id }}_intitule" input="intitule"
                       element="composant" composant="{{ composant.id }}"
                       name="devis[composants][{{ composant.id }}][intitule]" required="required" 
                       class="chakra-input" placeholder="Dénomination" >
                        <option disabled selected> Veuillez selectionner un composant </option>

                       {% for option in options %}

                         <option value="{{option.id}}"> {{ option.intitule }} </option>

                       {% endfor %}
                        <option value="Autre"> Autre </option>

                </select>

                {% endif %}
            </div>
            <div class="tab-el-right">
                <input type="text" id="devis_composants_{{ composant.id }}_quantite" input="quantite"
                       name="devis[composants][{{ composant.id }}][quantite]" required="required" maxlength="255"
                       element="composant" composant="{{ composant.id }}" class="chakra-input numbers dtht-composant"
                       placeholder="Quantité"
                       value="{{ composant.quantite }}">
            </div>
            <div class="tab-el-right">
               <select id="devis_composants_{{ composant.id }}_unite" name="devis[composants][{{ composant.id }}][unite]" class="col-md-12 chakra-input" required  input="unite" element="composant"  composant="{{ composant.id }}">
                        {% set isSelected = false %}
                        {% for unite in unites %}
                            <option value="{{unite.id}}"
                                {% if unite == composant.unite %}
                                        selected
                                        {% set isSelected = true %}
                                {% endif %}
                            > {{ unite.label}}</option>
                        {% endfor %}
                        <option disabled {{ composant.unite is empty or isSelected == false ? "selected" : ""}}>Unité</option>
                </select>
            </div>
            <div class="tab-el-right">
                <input type="text" id="devis_composants_{{ composant.id }}_debourseUnitaireHT" input="debourseUnitaireHT"
                       name="devis[composants][{{ composant.id }}][debourseUnitaireHT]" required="required" maxlength="255"
                       element="composant" composant="{{ composant.id }}" class="chakra-input numbers dtht-composant"
                       placeholder="Déboursé U HT"
                       value="{{ composant.debourseUnitaireHT|number_format(2,'.',' ') }}">
            </div>
            <div class="tab-el-right">
            </div>
            <div class="tab-el-right">
                <input type="text" id="devis_composants_{{ composant.id }}_marge"
                       input="marge"
                       name="devis[composants][{{ composant.id }}][marge]" required="required" maxlength="255"
                       class="chakra-input" placeholder="Déboursé Total HT"
                       value="{{ composant.marge|number_format(2,'.',' ') }}">
            </div>
            <div class="tab-el-right">
                <input type="text" id="devis_composants_{{ composant.id }}_debourseTotalHT" disabled="disabled"
                       input="debourseTotalHT"
                       name="devis[composants][{{ composant.id }}][debourseTotalHT]" required="required" maxlength="255"
                       class="chakra-input" placeholder="Déboursé Total HT"
                       value="{{ composant.prixDeVente|number_format(2,'.',' ') }}">
            </div>
            <div class="tab-el-right row justify-content-center">
                <button class="btn btn-danger btn-sm rounded-0 col-md-auto delete-composant" id="delete-composant-{{composant.id}}" type="button" data-toggle="tooltip" data-placement="top" title="Delete"><i class="fa fa-trash delete-composant"></i></button>
            </div>
        </div>
    </div>
</div>
</li>