    }


    div.background-select .card .color-choices div label {
        width: 55px;
        height: 55px;
        display: inline-block;
        border-radius: 50%;
        position: relative;
        z-index: 20;
    }

    div.background-select .card .color-choices div label:before {
        content: "";
        width: 45px;
        height: 45px;
        display: inline-block;
        background: red;
        position: absolute;
