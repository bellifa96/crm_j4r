        -moz-transition: all 0.2s ease-in-out;
        transition: all 0.2s ease-in-out;
        z-index: 10;
    }

    div.background-select .card .color-choices div label:after {
        content: "";
        width: 42px;
        height: 42px;
        background-color: rgba(0, 0, 0, 0.3);
