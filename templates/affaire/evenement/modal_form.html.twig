<style>
    .modal-dialog {
        position: absolute;
        right: 0;
        top: 0;
        padding: 0;
        margin: 0;
        width: 33%;
    }

    .modal-content {
        width: 100%;
    }

    .modal-body input:focus {
        border-color: #28c0f0;
        box-shadow: 0 0 0 0.1rem rgb(134 183 254);
    }

    .modal-body textarea:focus {
        border-color: #28c0f0;
        box-shadow: 0 0 0 0.1rem rgb(134 183 254);
    }

    .modal-body select:focus {
        border-color: #28c0f0;
        box-shadow: 0 0 0 0.1rem rgb(134 183 254);
    }

dd
</style>

<div class="modal fade" id="add-evenement" data-bs-backdrop="static"
     data-bs-keyboard="false" tabindex="-1"
     aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            {{ form_start(form, {'attr':{"class":"form-control","onsubmit":"return submitEvenement(event)"}}) }}

                <div class="modal-header">
                    <h5 class="modal-title"
                        id="exampleModalLabel">Ajouter un nouvel évènement</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" id="modal-body">
                    <div class="row mt-3">
                        <div class="col-md-4"><label class="labels">Titre</label>
                            {{ form_widget(form.titre,{"attr":{"class":"form-control","autofocus":"on","placeholder":"Titre"}}) }}
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-md-8"><label class="labels">Description</label>
                            {{ form_widget(form.description,{"attr":{"class":"form-control","placeholder":"Description"}}) }}
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-md-8"><label class="labels">Date de début</label>
                            {{ form_widget(form.dateDeDebut) }}
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-md-8"><label class="labels">Date de fin</label>
                            {{ form_widget(form.dateDeFin) }}
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-md-8"><label class="labels">Priorité</label>
                            {{ form_widget(form.priorite,{"attr":{"class":"form-control"}}) }}
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-md-8"><label class="labels">Type d'évènement</label>
                            {{ form_widget(form.typeDEvenement,{"attr":{"class":"form-control"}}) }}
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-md-8"><label class="labels">Attribuer à</label>
                            {{ form_widget(form.attribueA,{"attr":{"class":"form-control"}}) }}
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <div id="footer-load" style="display: none;">

                        <div class="spinner-border text-primary" role="status">
                            <span class="sr-only"></span>
                        </div>
                    </div>

                    <div id="modal_button">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                            Annuler
                        </button>

                        <button type="submit" class="btn btn-primary submit" value="create"
                                name="create_new_evenement"
                                id="create_new_evenement" onclick="$('#modal_button').hide();$('#footer-load').show();">
                            Enregistrer
                        </button>
                    </div>

                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
