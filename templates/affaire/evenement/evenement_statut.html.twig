<div class="col-md-12" id="div_{{ statut }}">
    <style>

        body.evenement_priorite_urgent {
            background-color: red;
        }

        body.evenement_priorite_important {
            background-color: orange;
        }

        body.evenement_priorite_normal {
            background-color: green;
        }

        body.evenement_priorite_faible {
            background-color: grey;
        }

        div.background-select {
            width: 75%;
            background-color: #ffffff;
            position: relative;
            z-index: 21;
            border-radius: 10px;
            display: contents;
            text-align: center;
        }

        div.background-select .card {
            margin-bottom: inherit;
            box-shadow: inherit;
            overflow: hidden;
            padding: 15px 0px 0px 0px;
        }

        div.background-select .card .color-choices {
            width: 100%;
            float: left;
            position: relative;
            padding-top: 10px;
        }

        div.background-select .card .color-choices div {
            width: 25%;
            height: 55px;
            float: left;
            text-align: center;
        }

        div.background-select .card .color-choices div input {
            width: 0px;
            height: 0px;
            position: absolute;
            top: -99999px;
            left: -99999px;
        }

        div.background-select .card .color-choices div input:checked ~ label:after {
            width: 55px;
            height: 55px;
            margin-top: -32.5px;
            margin-left: -32.5px;
        }

        div.background-select .card .color-choices div:nth-of-type(1) label:before {
            background-color: red;
        }

        div.background-select .card .color-choices div:nth-of-type(1) label:after {
            background-color: #ff4d4d;
        }

        div.background-select .card .color-choices div:nth-of-type(2) label:before {
            background-color: orange;
        }

        div.background-select .card .color-choices div:nth-of-type(2) label:after {
            background-color: #ffc04d;
        }

        div.background-select .card .color-choices div:nth-of-type(3) label:before {
            background-color: green;
        }

        div.background-select .card .color-choices div:nth-of-type(3) label:after {
            background-color: #00cd00;
        }

        div.background-select .card .color-choices div:nth-of-type(4) label:before {
            background-color: grey;
        }

        div.background-select .card .color-choices div:nth-of-type(4) label:after {
            background-color: #a6a6a6;
        }


        div.background-select .card .color-choices div label {
            width: 55px;
            height: 55px;
            display: inline-block;
            border-radius: 50%;
            position: relative;
            z-index: 20;
        }

        div.background-select .card .color-choices div label:before {
            content: "";
            width: 45px;
            height: 45px;
            display: inline-block;
            background: red;
            position: absolute;
            top: 50%;
            left: 50%;
            margin-top: -27.5px;
            margin-left: -27.5px;
            border-radius: 50%;
            -webkit-transition: all 0.2s ease-in-out;
            -moz-transition: all 0.2s ease-in-out;
            transition: all 0.2s ease-in-out;
            z-index: 10;
        }

        div.background-select .card .color-choices div label:after {
            content: "";
            width: 42px;
            height: 42px;
            background-color: rgba(0, 0, 0, 0.3);
            display: inline-block;
            position: absolute;
            top: 50%;
            left: 50%;
            margin-top: -26px;
            margin-left: -26px;
            border-radius: 50%;
            -webkit-transition: all 0.2s ease-in-out;
            -moz-transition: all 0.2s ease-in-out;
            transition: all 0.2s ease-in-out;
            z-index: 9;
        }

        div.background-select .card .color-choices div label:hover {
            cursor: pointer;
        }

    </style>
    {{ form_start(form) }}


    <div class="row mt-3">
        <div class="col-md-4"><label class="labels">Titre</label>
            {{ form_widget(form.titre,{"id":"evenement_titre_"~statut,"attr":{"class":"form-control","autofocus":"on","placeholder":"Titre"}}) }}
        </div>

        <div class="col-md-4">
            <label class="labels">Attribuer à</label>
            {{ form_widget(form.attribueA,{"id":"evenement_dateDeFin_"~statut,"attr":{"class":"select2 form-control"}}) }}
        </div>

        <div class="col-md-4"><label class="labels">Date d'échéance</label>

            <div class="row">
                <div class="col-md-8">
                    <input type="date" class="form-control datepicker" id="evenement_date_{{ statut }}" required>
                </div>
                <div class="col-md-4">
                    <div class="row">
                        <div class="col-md-6 p-0">
                            {{ form_widget(form.dateDeFin.time.hour,{"id":"evenement_dateDeFin_time_hour_"~statut,"attr":{"class":"form-control  ","autocomplet":"off"}}) }}
                        </div>
                        <div class="col-md-6 p-0">
                            {{ form_widget(form.dateDeFin.time.minute,{"id":"evenement_dateDeFin_time_time_"~statut,"attr":{"class":"form-control  ","autocomplet":"off"}}) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-2">


            <div class="col-md-6"><label class="labels">Description</label>
                {{ form_widget(form.description,{"id":"evenement_description_"~statut,"attr":{"class":"form-control","placeholder":"Description"}}) }}
            </div>

            <div class="row mt-3 background-select col-md-6">
                <div class="card col-md-6">
                    <label class="labels">Priorité</label>

                    <div id="evenement_priorite_{{ statut }}" class="color-choices">
                        <div>
                            <input type="radio" id="evenement_priorite_{{ statut }}_urgent"
                                   name="evenement_{{ statut }}_[priorite]" value="Urgent">
                            <label for="evenement_priorite_{{ statut }}_urgent" class="required"></label>
                        </div>
                        <div>
                            <input type="radio" id="evenement_priorite_{{ statut }}_important"
                                   name="evenement_{{ statut }}_[priorite]" value="Important">
                            <label for="evenement_priorite_{{ statut }}_important" class="required"></label>
                        </div>
                        <div>

                            <input type="radio" id="evenement_priorite_{{ statut }}_normal"
                                   name="evenement_{{ statut }}_[priorite]" value="Normal">
                            <label for="evenement_priorite_{{ statut }}_normal" class="required"></label>
                        </div>

                        <div>

                            <input type="radio" id="evenement_priorite_{{ statut }}_faible"
                                   name="evenement_{{ statut }}_[priorite]" value="Faible">
                            <label for="evenement_priorite_{{ statut }}_faible" class="required"></label>

                        </div>
                    </div>

                </div>
            </div>


            {{ form_end(form, {'render_rest': false}) }}
        </div>

    </div>
