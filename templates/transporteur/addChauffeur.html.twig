{% extends 'base.html.twig' %}

{% block title %}Ajouter Agence
{% endblock %}

{% block body %}
	<style>
		.back_data_afficher {
			width: 80%;
			margin-left: 8%;
		}
		#myModal {
			display: none;
			position: fixed;
			top: 50%;
			left: 50%;
			width: 70%;
			transform: translate(-50%, -50%);
			padding: 20px;
			background-color: #fff;
			border: 1px solid #ccc;
			max-height: 80%; /* Set a maximum height for the modal */
			overflow-y: auto; /* Enable vertical scrollbar if content overflows */
			box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
			z-index: 1;
		}
		#overlay {
			display: none;
			position: fixed;
			top: 0;
			left: 0;
			width: 100%;
			height: 100%;
			background-color: rgba(0, 0, 0, 0.5);
			z-index: 0;
		}
	</style>

	<div class="back_data_afficher">
		{{ form_start(form) }}

        
		<button type="submit" class="btn btn-primary">{{ button_label|default("Ajouter") }}</button>

		{{ form_end(form) }}

	</div>
{% endblock %}
