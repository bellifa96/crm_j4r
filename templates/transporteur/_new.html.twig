<div id="camionsDiv" class="hidden">
	<div class="col-md-11 m-auto page-block mt-4">
		<div class="societe">
			<button type="button" class="btn btn-primary" id="ajouterButton">
				<a href="{{ path('add_camions', {'id': id }) }}" class="">
					<span style="font-weight: bold; font-size: 14px; color: white;">Camions +</span>
				</a>
			</button>
			<table class="table text-center datatable" id="commandeAjouter" style="color: #0E4377;">
				<thead>
					<tr class="tr-head">
						<th>immatriculation</th>
						<th>tonnagemax</th>
						<th>Longueur Fleche</th>
						<th>Date Verifier</th>
						<th>Action</th>

					</tr>


				</thead>
				<tbody>

					{% for camion in camions %}
						<tr>
							<td>{{ camion.immatriculation }}</td>
							<td>{{ camion.tonnagemax }}</td>
							<td>{{ camion.longueurfleche }}</td>
							<td>{{ camion.dateverifgrue ? camion.dateverifgrue|date('Y-m-d') : '' }}</td>
							<td>
								<a href="{{ path('edit_camions', {'id': camion.idcamion }) }}" class=" small-button btn btn-warning">
									Modifier
								</a>
							</td>
						</tr>
					{% endfor %}

				</tbody>
			</table>
		</div>
	</div>
