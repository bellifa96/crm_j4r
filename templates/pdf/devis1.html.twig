<html style="margin: 0; padding: 0;background: grey; font-family: 'DejaVu Sans'">
<style>
    footer {
        position: absolute;
        bottom: 50px;
        left: 30px;
        right: 30px;
    }

    body {
        position: relative;
    }


</style>
<body style="margin: 30px auto;width: 210mm;min-height: 297mm;background: white;padding: 0 30px;box-sizing: border-box;font-size: 10px; line-height: 15px;">
<header>
    {% include 'pdf/devis_header.html.twig' %}
</header>
<main>
    <div style="height: 490px; border: 1px solid black; margin: 10px 0 30px 0">
        <div style="text-align: center; border-bottom: 1px solid black; background-color: #C5C5C5">
            <strong>Observations</strong></div>
    </div>
    <div style="display: flex; flex-direction: row; justify-content: space-between; margin: auto; vertical-align: middle">
        <div style="float: left; border: 1px solid black; padding: 3px; text-align: center; width: 45%; height: 100px; margin: 10px 0 0 0">
            <strong><u>Bon pour accord client</u></strong> (Date, cachet, signature) :
        </div>
        <div style="border: 1px solid black; width: 50%; height: 100px; float: right;">
            <div style="display: flex; flex-direction: row; text-align: right;padding: 3px 5px 0 0;">
                <div style="width: 70%; float: left">
                    <strong>Montant total € H.T.</strong>
                </div>
                <div style="width: 30%; float: right">
                    <strong> {{ devis.PrixDeVenteHT|number_format(2, ',', ' ') }} €</strong>
                </div>
            </div>
            <div style="display: flex; flex-direction: row; text-align: right;padding: 0 5px 3px 0;">
                <div style="width: 70%; float: left">
                    <strong>Prorata 0,00%</strong>
                </div>
                <div style="width: 30%; float: right">
                    <strong> - €</strong>
                </div>
            </div>
            <hr style="color: black">
            <div style="display: flex; flex-direction: row; justify-content: flex-end; text-align: right;padding: 3px 5px 0 0;">
                <div style="width: 70%; float: left">
                    <strong>Montant total € H.T. + Prorata</strong>
                </div>
                <div style="width: 30%; float: right">
                    <strong> - €</strong>
                </div>
            </div>
            <div style="display: flex; flex-direction: row; justify-content: flex-end; text-align: right;padding: 0 5px 0 0;">
                <div style="width: 70%; float: left">
                    <strong>T.V.A. 20,00%</strong>
                </div>
                <div style="width: 30%; float: right">
                    <strong> {{ ( devis.PrixDeVenteHT * devis.tva/100)|number_format(2, ',', ' ') }} €</strong>
                </div>
            </div>
            <div style="display: flex; flex-direction: row; justify-content: flex-end; text-align: right;padding: 0 5px 3px 0;">
                <div style="width: 70%; float: left">
                    <strong>Montant total € T.T.C</strong>
                </div>
                <div style="width: 30%; float: right">
                    <strong>{{ (devis.PrixDeVenteHT + devis.PrixDeVenteHT * devis.tva/100)|number_format(2, ',', ' ') }} €</strong>
                </div>
            </div>
        </div>
    </div>
</main>
<footer>
    {% include 'pdf/devis_footer.html.twig' %}
</footer>
</body>
</html>

