{% extends 'base.html.twig' %}

{% block title %}Ticket{% endblock %}

{% block body %}
    <h1>Ticket</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ticket.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ ticket.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ ticket.description }}</td>
            </tr>
            <tr>
                <th>Level</th>
                <td>{{ ticket.level }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ ticket.status }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ ticket.date }}</td>
            </tr>
            <tr>
                <th>DateTaken</th>
                <td>{{ ticket.dateTaken }}</td>
            </tr>
            <tr>
                <th>DateResolved</th>
                <td>{{ ticket.dateResolved }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ ticket.code }}</td>
            </tr>
            <tr>
                <th>Resolved</th>
                <td>{{ ticket.resolved ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Complain</th>
                <td>{{ ticket.complain }}</td>
            </tr>
            <tr>
                <th>Commentary</th>
                <td>{{ ticket.commentary }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_ticket_index') }}">back to list</a>

    <a href="{{ path('app_ticket_edit', {'id': ticket.id}) }}">edit</a>

    {{ include('ticket/_delete_form.html.twig') }}
{% endblock %}
