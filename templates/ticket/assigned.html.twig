{% extends 'base.html.twig' %}

{% block title %}
	{{ title }}
{% endblock %}

{% block body %}

	<div class="back_data_afficher">

		{{ include('ticket/_formAssigned.html.twig') }}
	</div>
	<style>

		.back_data_afficher {
			width:80%;
			margin:8%;
			background-color: white;
			border-radius: 10px; /* All corners will have a 10px radius */
		}
		.span-color {
			color: #1C1C1C;
		}

		.ticket {
			font-size: 1.0rem; /* Increase font size */
			margin: 20px; /* Add some spacing around the card */
			font-family: "Open Sans", Arial, sans-serif;
			color: #191970;

		}

		.ticketTitleValue {
			font-size: 0.7rem; /* Set font size for text */
			color: #4169E1; /* Text color */
			margin: 20px; /* Add some spacing around the card */
			font-family: "Helvetica Neue", Arial, sans-serif;

		}

		.custom-button {
			display: inline-block;
			padding: 10px 20px;
			background-color: #007bff; /* Button background color */
			color: #fff; /* Text color */
			font-size: 16px;
			border: none;
			margin-left: 10%;
			border-radius: 5px; /* Rounded corners */
			cursor: pointer;
			text-align: center;
			text-decoration: none;
			transition: background-color 0.3s ease; /* Smooth background color transition */
		}
		.custom-button:hover {
			background-color: #0056b3; /* Button background color on hover */
		}
		

		.custom-textarea-class {
			/* Your custom styles here */
			width: 100%;
			height: 200px;
			border: 1px solid #45D3F5;
			padding: 10px;
		}

		@media(max-width: 768px) {
			.ticket {
				font-size: 14px;
			}
		}

		@media(max-width: 480px) {
			.ticket {
				font-size: 12px;
			}
		}
	</style>

{% endblock %}
