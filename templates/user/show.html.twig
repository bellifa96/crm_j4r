{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="container">
        <div class="main-body">

            <div class="row gutters-sm">
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex flex-column align-items-center text-center">
                                <img src="{{ asset('./uploads/photo/'~user.photo) }}" alt="Admin" class="rounded-circle"
                                     width="150">
                                <div class="mt-3">
                                    <h4>{{user.lastname~" "~user.firstname}}</h4>
                                    <p class="text-secondary mb-1">{{ user.poste ? user.poste.titre : ""}} {{ user.service ? user.service.titre : ""}}</p>
                                    <p class="text-muted font-size-sm">48 bd Félix Faure, Aubervilliers</p>
                                    <button class="btn btn-primary">Modifier</button>
                                    <button class="btn btn-outline-primary">Supprimer</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card mt-3">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <h6 class="mb-0">

                                    <i class="bi bi-telephone-forward-fill"></i>
                                    Téléphone
                                </h6>
                                <span class="text-secondary">07.82.16.09.07</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <h6 class="mb-0">
                                    <i class="bi bi-phone-fill"></i>
                                    Téléphone Perso
                                </h6>
                                <span class="text-secondary">07.82.16.09.07</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <h6 class="mb-0">
                                    <i class="bi bi-envelope"></i>
                                    Email
                                </h6>
                                <span class="text-secondary">{{user.email}}</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <h6 class="mb-0">
                                    <i class="bi bi-envelope"></i>
                                    Email Perso
                                </h6>
                                <span class="text-secondary">{{user.emailPerso}}</span>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Service</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    {{ user.service ? user.service.titre }}
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Fonction</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    {{ user.poste ? user.poste.titre }}
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Matricule</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    {{ user.matricule}}
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Roles</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    {{ user.roles|join('|') }}
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Address</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    48 bd felixe Faure
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-12">
                                    <a class="btn btn-info " target="__blank"
                                       href="#">Ajouter une taches</a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row gutters-sm">
                        <div class="col-sm-6 mb-3">
                            <div class="card h-100">
                                <div class="card-header text-center fw-bold">
                                    Matériels
                                </div>
                                <div class="card-body">
                                  <ul>
                                      <li>
                                          Voiture
                                      </li>
                                      <li>
                                          Ordinateur
                                      </li>
                                      <li>
                                          Téléphone
                                      </li>
                                  </ul>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6 mb-3">
                            <div class="card h-100">
                                <div class="card-header text-center fw-bold">
                                    Ged
                                </div>
                                <div class="card-body">
                                    <ul>
                                        <li>
                                            Carte Vitale
                                        </li>
                                        <li>
                                            Fiche de paie
                                        </li>
                                        <li>
                                            Contrat
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>


                </div>
            </div>

        </div>
    </div>

    <style>
        body {
            margin-top: 20px;
            color: #1a202c;
            text-align: left;
            background-color: #e2e8f0;
        }

        .main-body {
            padding: 15px;
        }

        .card {
            box-shadow: 0 1px 3px 0 rgba(0, 0, 0, .1), 0 1px 2px 0 rgba(0, 0, 0, .06);
        }

        .card {
            position: relative;
            display: flex;
            flex-direction: column;
            min-width: 0;
            word-wrap: break-word;
            background-color: #fff;
            background-clip: border-box;
            border: 0 solid rgba(0, 0, 0, .125);
            border-radius: .25rem;
        }

        .card-body {
            flex: 1 1 auto;
            min-height: 1px;
            padding: 1rem;
        }

        .gutters-sm {
            margin-right: -8px;
            margin-left: -8px;
        }

        .gutters-sm > .col, .gutters-sm > [class*=col-] {
            padding-right: 8px;
            padding-left: 8px;
        }

        .mb-3, .my-3 {
            margin-bottom: 1rem !important;
        }

        .bg-gray-300 {
            background-color: #e2e8f0;
        }

        .h-100 {
            height: 100% !important;
        }

        .shadow-none {
            box-shadow: none !important;
        }
    </style>
{% endblock %}
