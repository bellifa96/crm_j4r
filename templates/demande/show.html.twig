    <script>

        $('.add-evenement').click(function () {
            if ($('#add-evenement').length > 0) {
                $("#add-evenement").modal('show');

            } else {
                let path = "{{ path('app_affaire_evenement_new_modal') }}";

                $.get(path, function (data) {
                    $('body').append(JSON.parse(data).message);
                    $("#add-evenement").modal('show');
                    $('.select2').select2();


                })
            }
        })


        function submitEvenement(event) {
            event.preventDefault();

            let dateDebut = $("#evenement_dateDeDebut_date_year").val() + '-' + $("#evenement_dateDeDebut_date_month").val().padStart(2, '0')
                + '-' + $("#evenement_dateDeDebut_date_day").val().padStart(2, '0') + ' ' + $("#evenement_dateDeDebut_time_hour").val().padStart(2, '0')
                + ':' + $("#evenement_dateDeDebut_time_minute").val().padStart(2, '0');

            let dateFin = $("#evenement_dateDeFin_date_year").val() + '-' + $("#evenement_dateDeFin_date_month").val().padStart(2, '0')
                + '-' + $("#evenement_dateDeFin_date_day").val().padStart(2, '0') + ' ' + $("#evenement_dateDeFin_time_hour").val().padStart(2, '0')
                + ':' + $("#evenement_dateDeFin_time_minute").val().padStart(2, '0');

            console.log(dateDebut);
            console.log(dateFin);

            $("#evenement-error").length > 0 ? $("#evenement-error").remove() : "";
            let evenement = {
                demande: "{{ demande.id }}",
                titre: $("#evenement_titre").val(),
                description: $("#evenement_description").val(),
                dateDeDebut: new String(dateDebut),
                dateDeFin: new String(dateFin),
                priorite: $('input[type="radio"][name="evenement[priorite]"]:checked').val(),
                typeDEvenement: $("#evenement_typeDEvenement").val(),
                attribueA: $("#evenement_attribueA").val(),
            };

            console.log(evenement);
            $.post("{{ path('app_affaire_evenement_new_evenement') }}", {evenement}, function (data) {

                data = JSON.parse(data);

                if (data.code === 200) {

                    $("#add-evenement").modal('hide');
                    $('#add-evenement').remove()
                } else {

                    $('#modal_button').show();
                    $('#footer-load').hide()

                    $('#modal-body').append(`
                  <div class="alert alert-danger mt-2" role="alert" id="evenement-error">
                      ${data.message}
                   </div>
                `)
                }
            })
        }


        $('.message-submit').click(function () {

            let url = "/conversation/message/{{ demande.id }}/";
            let id = $(this).attr('id');
            let message = "";
            let ul = "";
            if (id === "btn-metre") {
                url += "metre"
                message = $("input[name='message_metre']").val();
                $("input[name='message_metre']").val("")
                ul = 'metre-ul';
            }else if( id === "btn-negociation"){
                url += "negociation"
                message = $("input[name='message_negociation']").val();
                $("input[name='message_negociation']").val("")
                ul = 'negociation-ul';
            }else if(id === "btn-client"){
                url += "client"
                message = $("input[name='message_client']").val();
                $("input[name='message_client']").val("")
                ul = 'client-ul';
            }else{
                console.log('id')
                return 0;
            }


            $.post(url, {message: message}, function (data) {
                data = JSON.parse(data);
                if (data.code === 200) {
                    let li = ` <li>
                                        <div class="msg you">
                                        <span class="partner">
                                            ${data.message.createur}
                                        </span>
                                                 ${data.message.message}
                                        <span class="time">${data.message.date}</span>
                             </li>`
                    $('#' + ul).append(li)
                }
            })

        });


    </script>
