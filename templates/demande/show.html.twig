            <!-- Taches -->
            <div class="tab-pane fade {{ demande.menu is not empty and  app.user.id in demande.menu|keys and demande.menu[app.user.id] ==  'taches-tab' ? 'show active' : '' }}"
                 id="taches" role="tabpanel" aria-labelledby="taches-tab">

                <div class="col-md-12 m-auto mt-4">
                    <div class="card-hover-shadow-2x mb-3 card">
                        <div class="card-header-tab card-header">
                            <div class="card-header-title font-size-lg text-capitalize font-weight-normal">
                                <h4 style="margin: 0;">
                                    <i class="fa fa-tasks"></i>
                                    &nbsp;liste des tâches
                                </h4>
                            </div>
                            <div>
                                <span class="border px-3 p-1 add-evenement add-button">Tâche <i
                                            class="fa fa-plus"></i></span>
                            </div>

                        </div>
                        <div class="scroll-area-sm">
                            <table class="table text-center table-responsive datatable">
                                <thead>
                                <tr>
                                    <th style="width: 2%;"></th>
                                    <th>Tâche</th>
                                    <th>Description</th>
                                    <th>Date de début</th>
                                    <th>Date d'échéance</th>
                                    <th>Statut</th>
                                    <th>Créé par</th>
                                    <th>Attribué à</th>
                                    <th>Action</th>
                                </tr>

                                </thead>
                                <tbody>

                                {% set colors = {"Normal":"green","Urgent":"red","Important":"orange","Faible":"grey"} %}
                                {% set statutColors = {"En cours":"#E98F00","Info":"#2091DE","Annuler":"grey","Achevé":"#29CA40","A traiter":"black"} %}
                                {% for evenement in demande.evenements %}

                                    <tr>
                                        <td>
                                            <i class="bi bi-bookmark-fill"
                                               style="color: {{ evenement.priorite in colors|keys ?colors[evenement.priorite] : "green" }};font-size: 1.1rem;"></i>
                                        </td>
                                        <td>{{ evenement.titre }}</td>
                                        <td>{{ evenement.description }}</td>

                                        <td>{{ evenement.dateDeDebut|date('d/m/Y H:i') }}</td>
                                        <td>{{ evenement.dateDeFin|date('d/m/Y H:i') }}</td>
                                        <td>
                                            <div style="color:{{ evenement.statut in statutColors|keys ?statutColors[evenement.statut] : "grey" }};"> {{ evenement.statut }} </div>
                                        </td>
                                        <td>{{ evenement.createur.firstname }}</td>
                                        <td>

                                            {% for user in evenement.attribueA %}
                                                {{ user.firstname }}<br>
                                            {% endfor %}
                                        </td>

                                        <td>
                                            <div class="row justify-content-center">
                                                {% if evenement.statut != "Achevé" %}
                                                    <div class="col-md-auto">
                                                        <a href="{{ path('app_affaire_evenement_validate',{'id':evenement.id}) }}"
                                                           class="border-0 btn-transition btn btn-outline-success">
                                                            <i class="fa fa-check"></i></a>
                                                    </div>
                                                {% endif %}


                                                {% if  is_granted('ROLE_ADMIN') %}
                                                    <div class="col-md-auto">

                                                        <form method="post"
                                                              action="{{ path('app_affaire_evenement_delete', {'id': evenement.id}) }}"
                                                              onsubmit="return confirm('êtes vous certain de vouloir supprimer cette tâche?');">
                                                            <input type="hidden" name="_token"
                                                                   value="{{ csrf_token('delete' ~ evenement.id) }}">
                                                            <button class="border-0 btn-transition btn btn-outline-danger">
                                                                <i class="fa fa-trash"></i></button>
                                                        </form>
                                                    </div>

                                                {% endif %}
                                            </div>
                                        </td>

                                    </tr>
                                {% else %}

                                    <tr>
                                        <td colspan="9">aucune tâche pour cette demande</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>

                        </div>

                    </div>

                </div>
            </div>


            <!-- Affaires -->
            <div class="tab-pane fade" id="affaires" role="tabpanel" aria-labelledby="affaires-tab">

            </div>

            <!-- Commentaires -->
            <div class="tab-pane fade {{ demande.menu is not empty and  app.user.id in demande.menu|keys and demande.menu[app.user.id] ==  'commentaires-tab' ? 'show active' : '' }}"
                 id="commentaires" role="tabpanel" aria-labelledby="commentaires-tab">

                <div id="viewport" class="row">

                    <div class="chatbox col-md-3" id="metre">

                        <div class="chats">
                            <div class="chats-title border-bottom-1">
                                <h6>Commentaires métré</h6>
                            </div>
                            <ul id="metre-ul">
                                {% if demande.conversationMetreDemande %}
                                    {% for message in  demande.conversationMetreDemande.messages %}
                                        <li>
                                            <div class='{{ message.createur.id == app.user.id ? "msg you" :"msg him" }}'>
                                        <span class="partner">
                                            {{ message.createur.firstname~" "~message.createur.lastname }}
                                        </span>
                                                {{ message.message }}
                                                <span class="time">{{ message.createdAt|date("d/m/Y H:i:s") }}</span>
                                            </div>
                                        </li>
                                    {% endfor %}
                                {% endif %}
                            </ul>
                        </div>
                        <div class="sendBox row">
                            <div class="col-md-10">
                                <input type="text" placeholder="écrire un commentaire métré" name="message_metre"
                                       class="chatin">
                            </div>
                            <div class="col-md-2">
                                <button class="button message-submit" style="background: transparent; border: none;"
                                        id="btn-metre">
                                    <i class="bi bi-send" style="font-size: 1.5rem;color: blue;"></i>
                                </button>
                            </div>
                        </div>
                    </div>

                    <div class="chatbox col-md-3" id="client">
                        <div class="chats">
                            <div class="chats-title border-bottom-1">
                                <h6>Commentaires client</h6>
                            </div>
                            <ul id="client-ul">
                                {% if demande.conversationClient %}

                                    {% for message in  demande.conversationClient.messages %}

                                        <li>
                                            <div class='{{ message.createur.id == app.user.id ? "msg you" :"msg him" }}'>
                                        <span class="partner">
                                            {{ message.createur.firstname~" "~message.createur.lastname }}
                                        </span>
                                                {{ message.message }}
                                                <span class="time">{{ message.createdAt|date("d/m/Y H:i:s") }}</span>
                                            </div>
                                        </li>
                                    {% endfor %}
                                {% endif %}
                            </ul>
                        </div>
                        <div class="sendBox row">
                            <div class="col-md-10">
                                <input type="text" placeholder="écrire un commentaire client" name="message_client"
                                       class="chatin">
                            </div>
                            <div class="col-md-2">
                                <button class="button message-submit" style="background: transparent; border: none;"
                                        id="btn-client">
                                    <i class="bi bi-send" style="font-size: 1.5rem;color: blue;"></i>
                                </button>
                            </div>
                        </div>
                    </div>

                    <div class="chatbox col-md-3" id="apres-negociatio">
                        <div class="chats">
                            <div class="chats-title border-bottom-1">
                                <h6>Commentaires après négociation</h6>
                            </div>
                            <ul id="negociation-ul">
                                {% if demande.conversationApresNegociationDemande %}
                                    {% for message in  demande.conversationApresNegociationDemande.messages %}
                                        <li>
                                            <div class='{{ message.createur.id == app.user.id ? "msg you" :"msg him" }}'>
                                                <span class="partner">
                                                    {{ message.createur.firstname~" "~message.createur.lastname }}
                                                </span>
                                                {{ message.message }}
                                                <span class="time">{{ message.createdAt|date("d/m/Y H:i:s") }}</span>
                                            </div>
                                        </li>
                                    {% endfor %}
                                {% endif %}
                            </ul>
                        </div>
                        <div class="sendBox row">
                            <div class="col-md-10">
                                <input type="text" placeholder="écrire un commentaire aprés négociation" class="chatin"
                                       name="message_negociation">
                            </div>
                            <div class="col-md-2">
                                <button class="button message-submit" style="background: transparent; border: none;"
                                        id="btn-negociation">
                                    <i class="bi bi-send" style="font-size: 1.5rem;color: blue;"></i>
                                </button>
                            </div>
                        </div>
                    </div>


                </div>
            </div>
            <!-- Ged -->
            <div class="tab-pane fade {{ demande.menu is not empty and  app.user.id in demande.menu|keys and demande.menu[app.user.id] ==  'ged-tab' ? 'show active' : '' }}"
                 id="ged" role="tabpanel" aria-labelledby="ged-tab">

                <div class="row mt-4 justify-content-around">

                    <div class="col-md-6">
                        <table class="table table-ged bg-leasy">
                            <thead>
                            <tr class="tr-head text-center">
                                <th>Type</th>
                                <th>date de chargement</th>
                                <th>Par</th>
                                <th>Action</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for fichier in demande.ged %}
                                {% if fichier.isDeleted != true %}
                                    <tr class="bg-blue text-center" style="border-bottom:1px;border-color: #f8f9fa;">
                                        <td class="get-frame" id="{{ fichier.id }}">{{ fichier.typeFichier.titre }}</td>
                                        <td>{{ fichier.createdAt|date('d/m/Y H:i:s') }}</td>
                                        <td>{{ fichier.createur.firstname }}</td>
                                        <td>
                                            <a href="{{ path('app_ged_get_id' , {'id':fichier.id}) }}"
                                               target="_blank"><i class="fa fa-search"
                                                                  style="font-size: 1rem;"
                                                                  aria-hidden="true"></i></a>
                                            <a href="{{ path('app_ged_download' , {'id':fichier.id}) }}"
                                               download="{{ fichier.fichier }}"><i
                                                        class="fa fa-download"
                                                        style="font-size: 1rem;margin-left:5%;"
                                                        aria-hidden="true"></i></a>
                                            <form method="post"
                                                  id="formDeleteFile-{{ fichier.id }}"
                                                  style="display:contents;"
                                                  action="{{ path('app_ged_fichier_delete', {'id': fichier.id}) }}"
                                                  onsubmit="return confirm('êtes vous certain de vouloir supprimer {{ fichier.fichier }}?');">
                                                <input type="hidden" name="_method"
                                                       value="DELETE">
                                                <input type="hidden" name="_token"
                                                       value="{{ csrf_token('delete' ~ fichier.id) }}">
                                                <button style="border-color: transparent;    background-color:transparent;">
                                                    <i class="fa fa-trash deleteFile grab"
                                                       style="font-size: 1rem;margin-left:5%; color: #0E4377;"
                                                       aria-hidden="true"></i></button>
                                            </form>
                                        </td>

                                    </tr>
                                {% endif %}
                            {% endfor %}
                            </tbody>
                        </table>

                        <iframe src="" height="200" width="300" id="iframe-ged"></iframe>

                    </div>

                    <div class="col-md-3" style="height:max-content;background-color:white;">

                        <div class="row text-start mb-4">
                            <b style="color:#0E4377;">Document à charger</b>
                        </div>
                        {{ form_start(form) }}


                        <div class="row">
                            <div class="col-md-3  text-end">
                                <label class="labels">Type</label>
                            </div>
                            <div class="col-md-9">
                                {{ form_widget(form.typeFichier,{'attr':{'class':'form-control form-control-sm-2'}}) }}
                            </div>
                        </div>
                        <div class="row mt-2 mb-2">
                            <div class="col-md-3">
                                <label class="labels"> </label>
                            </div>
                            <div class="col-md-9">
                                {{ form_widget(form.fichier,{'attr':{'class':''}}) }}
                            </div>
                        </div>

                        <div class="row justify-content-end">
                            <div class="col-md-auto">

                                <button type="submit" class="btn btn-info-2 btn-sm">Charger</button>

                            </div>
                        </div>

                        {{ form_widget(form) }}

                        {{ form_end(form) }}
                    </div>

                </div>

            </div>
            <!-- Historique -->
            <div class="tab-pane fade {{ demande.menu is not empty and  app.user.id in demande.menu|keys and demande.menu[app.user.id] ==  'historique-tab' ? 'show active' : '' }}"
                 id="historique" role="tabpanel" aria-labelledby="historique-tab">

                <div class="col-md-6 m-auto row mt-2">
                    <div class="col-md-5 text-end">
                        Date de création
                    </div>
                    <div class="col-md-auto bg-leasy">
                        {{ demande.createdAt|date('d/m/y H:i:s') }}
                    </div>
                </div>

                <div class="col-md-6 m-auto row mt-2">
                    <div class="col-md-5 text-end">
                        Date de la dernière modification
                    </div>
                    <div class="col-md-auto bg-leasy">
                        {{ demande.updatedAt|date('d/m/y H:i:s') }}
                    </div>
                </div>


                <div class="col-md-12" style="text-overflow:ellipsis;overflow:auto;white-space:nowrap;">
                    <table class="table datatable">
                        <thead>
                        <tr class="tr-head">
                            <th>N°Version</th>
                            <th>Action</th>
                            <th>Modifier par</th>
                            <th>Date</th>
                            <th>Données changées</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for version in logs %}

                            <tr>
                                <td>{{ version.version }}</td>
                                <td>{{ version.action }}</td>
                                <td>{{ version.username }}</td>
                                <td>{{ version.loggedAt|date("d/m/Y H:i:s") }}</td>
                                <td>{{ version.data|json_encode() }}</td>

                            </tr>
                        {% endfor %}

                        </tbody>
                    </table>

                </div>

            </div>

        </div>


    </div>


    <script>


        $('.page-head ul').append("<li> <a href='#'  id='devis-add'  class='btn btn-info btn-sm mr-1'>Créer un devis </a> </li>");


        $('#devis-add').click(function () {

            $('#modal-devis').remove();
            let path = "{{ path('app_affaire_devis_modal_titre',{'id':demande.id}) }}";
            $.post(path, function (data) {
                $('body').append(JSON.parse(data).message);
                $("#modal-devis").modal('show');

            })
        })


        $('#transferer').click(function () {

            $('.user-modal').remove();
            let path = "{{ path('app_demande_form') }}";
            $.post(path, {
                id: "{{ demande.id }}"
            }, function (data) {
                $('#body').append(JSON.parse(data).message);
            })
        })
        $('.add-evenement').click(function () {
            if ($('#add-evenement').length > 0) {
                $("#add-evenement").modal('show');

            } else {
                let path = "{{ path('app_affaire_evenement_new_modal') }}";

                $.get(path, function (data) {
                    $('body').append(JSON.parse(data).message);
                    $("#add-evenement").modal('show');
                    $('.select2').select2();


                })
            }
        })


        function submitEvenement(event) {
            event.preventDefault();

            let dateDebut = $("#evenement_dateDeDebut_date_year").val() + '-' + $("#evenement_dateDeDebut_date_month").val().padStart(2, '0')
                + '-' + $("#evenement_dateDeDebut_date_day").val().padStart(2, '0') + ' ' + $("#evenement_dateDeDebut_time_hour").val().padStart(2, '0')
                + ':' + $("#evenement_dateDeDebut_time_minute").val().padStart(2, '0');

            let dateFin = $("#evenement_dateDeFin_date_year").val() + '-' + $("#evenement_dateDeFin_date_month").val().padStart(2, '0')
                + '-' + $("#evenement_dateDeFin_date_day").val().padStart(2, '0') + ' ' + $("#evenement_dateDeFin_time_hour").val().padStart(2, '0')
                + ':' + $("#evenement_dateDeFin_time_minute").val().padStart(2, '0');

            $("#evenement-error").length > 0 ? $("#evenement-error").remove() : "";
            let evenement = {
                demande: "{{ demande.id }}",
                titre: $("#evenement_titre").val(),
                description: $("#evenement_description").val(),
                dateDeDebut: String(dateDebut),
                dateDeFin: String(dateFin),
                priorite: $('input[type="radio"][name="evenement[priorite]"]:checked').val(),
                typeDEvenement: $("#evenement_typeDEvenement").val(),
                attribueA: $("#evenement_attribueA").val(),
            };

            console.log(evenement);
            $.post("{{ path('app_affaire_evenement_new_evenement') }}", {evenement}, function (data) {

                data = JSON.parse(data);

                if (data.code === 200) {

                    $("#add-evenement").modal('hide');
                    $('#add-evenement').remove()
                } else {

                    $('#modal_button').show();
                    $('#footer-load').hide()

                    $('#modal-body').append(`
                  <div class="alert alert-danger mt-2" role="alert" id="evenement-error">
                      ${data.message}
                   </div>
                `)
                }
            })
        }


        $('.message-submit').click(function () {

            let url = "/conversation/message/{{ demande.id }}/";
            let id = $(this).attr('id');
            let message = "";
            let ul = "";
            if (id === "btn-metre") {
                url += "metre"
                message = $("input[name='message_metre']").val();
                $("input[name='message_metre']").val("")
                ul = 'metre-ul';
            } else if (id === "btn-negociation") {
                url += "negociation"
                message = $("input[name='message_negociation']").val();
                $("input[name='message_negociation']").val("")
                ul = 'negociation-ul';
            } else if (id === "btn-client") {
                url += "client"
                message = $("input[name='message_client']").val();
                $("input[name='message_client']").val("")
                ul = 'client-ul';
            } else {
                console.log('id')
                return 0;
            }


            $.post(url, {message: message}, function (data) {
                data = JSON.parse(data);
                if (data.code === 200) {
                    let li = ` <li>
                                        <div class="msg you">
                                        <span class="partner">
                                            ${data.message.createur}
                                        </span>
                                                 ${data.message.message}
                                        <span class="time">${data.message.date}</span>
                             </li>`
                    $('#' + ul).append(li)
                }
            })

        });

        $("#details-tab, #taches-tab, #commentaires-tab, #affaires-tab, #ged-tab").click(function () {

            let id = $(this).attr('id');
            $.get("/demande/menu/demande/" + id + "/{{ demande.id }}", function (data) {
                console.log(data);
            })

        });


    </script>
{% endblock %}
