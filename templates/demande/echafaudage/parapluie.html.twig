<div class="row mt-2 form-container" id="parapluie">

    <h6 class="text-center">Général</h6>
    <div class="row mt-3">
        <div class="col-md-3 text-end labels">
            Type de préstation :
        </div>
        <div class="col-md-9">
            <div id="demande_typeDePrestation" class="row">
                <div class="col-md-4">
                    <input type="radio" id="demande_typeDePrestation_0" name="demande[typeDePrestation]"
                           required="required"
                           value="Estimation"
                           class="required" {{ demande.typeDePrestation == "Estimation" ? "checked" :"" }}>
                    <label for="demande_typeDePrestation_0" class="required">Estimation</label>
                </div>

                <div class="col-md-4">
                    <input type="radio" id="demande_typeDePrestation_1"
                           name="demande[typeDePrestation]" {{ demande.typeDePrestation == "Pre-etude" ? "checked" :"" }}
                           required="required" class="required"
                           value="Pre-etude">
                    <label for="demande_typeDePrestation_1" class="required">Pré-étude</label>
                </div>

                <div class="col-md-4">
                    <input type="radio" id="demande_typeDePrestation_2"
                           name="demande[typeDePrestation]" {{ demande.typeDePrestation == "Execution" ? "checked" :"" }}
                           required="required" class="required"
                           value="Execution">
                    <label for="demande_typeDePrestation_2" class="required">Exécution</label>
                </div>
            </div>
        </div>
    </div>


    <div class="row mt-3">
        <div class="col-md-3 text-end labels">
            Documents souhaités :
        </div>
        <div class="col-md-9">

            <div id="demande_documentsSouhaites" class="row">
                <div class="col-md-4">
                    <input type="checkbox" id="demande_documentsSouhaites_0"
                           name="demande[documentsSouhaites][]"{{ "Plan" in demande.documentsSouhaites ? "checked" :"" }}
                           value="Plan">
                    <label for="demande_documentsSouhaites_0" class="required">PLAN</label>
                </div>
                <div class="col-md-4">
                    <input type="checkbox" id="demande_documentsSouhaites_1"
                           name="demande[documentsSouhaites][]" {{ "NDC" in demande.documentsSouhaites ? "checked" :"" }}
                           value="NDC">
                    <label for="demande_documentsSouhaites_1" class="required">NDC</label>
                </div>
                <div class="col-md-4">
                    <input type="checkbox" id="demande_documentsSouhaites_2"
                           name="demande[documentsSouhaites][]" {{ "Autre" in demande.documentsSouhaites ? "checked" :"" }}
                           value="Autre">
                    <label for="demande_documentsSouhaites_2" class="required">Autre</label>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-3 text-end labels">
            Fonds de plan :
        </div>
        <div class="col-md-9">
            <div id="demande_fondsDePlan" class="row">
                <div class="col-md-4">

                    <input type="radio" id="demande_fondsDePlan_0"
                           name="demande[fondsDePlan]" {{ "1" == demande.fondsDePlan ? "checked" :"" }}
                           required="required" value="1">
                    <label for="demande_fondsDePlan_0" class="required">Oui</label>
                </div>
                <div class="col-md-4">
                    <input type="radio" id="demande_fondsDePlan_1"
                           name="demande[fondsDePlan]" {{ "0" == demande.fondsDePlan ? "checked" :"" }}
                           required="required" value="0">
                    <label for="demande_fondsDePlan_1" class="required">Non</label>
                </div>
            </div>
        </div>
    </div>
    <hr style="color: #0d4377; padding: 2px 0; margin: 10px 0;">

    <h6 class="text-center">Spécifique</h6>

    <div class="row mt-3">
        <div class="col-md-3 text-end labels">
            Type de matériel :
        </div>


        <div class="col-md-9">
            <div id="demande_typeDeMateriel" class="row">
                <div class="col-md-4">
                    <input type="radio" id="demande_typeDeMateriel_0"
                           name="demande[typeDeMateriel]" {{ "Couvralu" == demande.typeDeMateriel ? "checked" :"" }}
                           required="required" value="Couvralu">
                    <label for="demande_typeDeMateriel_0" class="required">Couvralu</label>
                </div>
                <div class="col-md-4">
                    <input type="radio" id="demande_typeDeMateriel_1"
                           name="demande[typeDeMateriel]" {{ "Couvralu XL" == demande.typeDeMateriel ? "checked" :"" }}
                           required="required" value="Couvralu XL">
                    <label for="demande_typeDeMateriel_1" class="required">Couvralu XL</label>
                </div>
                <div class="col-md-4">
                    <input type="radio" id="demande_typeDeMateriel_2"
                           name="demande[typeDeMateriel]" {{ "Fixe" == demande.typeDeMateriel ? "checked" :"" }}
                           required="required" value="Fixe">
                    <label for="demande_typeDeMateriel_2" class="required">Fixe</label>
                </div>
                <div class="col-md-4">
                    <input type="radio" id="demande_typeDeMateriel_3"
                           name="demande[typeDeMateriel]" {{ "Roulant" == demande.typeDeMateriel ? "checked" :"" }}
                           required="required" value="Roulant">
                    <label for="demande_typeDeMateriel_3" class="required">Roulant</label>
                </div>
                <div class="col-md-4">
                    <input type="radio" id="demande_typeDeMateriel_4"
                           name="demande[typeDeMateriel]" {{ "Couvralu" != demande.typeDeMateriel
                    and "Roulant" != demande.typeDeMateriel
                    and "Fixe" != demande.typeDeMateriel
                    and "Couvralu XL" != demande.typeDeMateriel and demande.typeDeMateriel is not empty
                    ? "checked" :"" }}
                           required="required" value="Autre">
                    <label for="demande_typeDeMateriel_4" class="required">Autre</label>
                </div>
                {% if "Couvralu" != demande.typeDeMateriel and "Roulant" != demande.typeDeMateriel and "Fixe" != demande.typeDeMateriel and "Couvralu XL" != demande.typeDeMateriel  %}
                    <div class="col-md-4">
                        <input type="radio" id="demande_typeDeMateriel_autre"
                               name="demande[typeDeMateriel]"
                               required="required" value="{{ demande.typeDeMateriel }}">

                    </div>

                {% endif %}
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-md-3 text-end labels">
                Portée libre :
            </div>
            <div class="col-md-9 row">
                <div id="demande_porteeLibre" class="col-md-4">

                    <label for="demande_porteeLibre" class="required">Portée libre (en m env.)</label>
                    <input type="text" id="demande_porteeLibre" class="form-control" value="{{ demande.porteeLibre }}"
                           name="demande[porteeLibre]" required="required">
                </div>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-md-3 text-end labels">
                Longueur :
            </div>
            <div class="col-md-9 row">
                <div id="demande_longueur" class="col-md-4">

                    <label for="demande_longueur" class="required">Longueur (en m env.)</label>
                    <input type="text" id="demande_longueur" name="demande[longueur]" required="required"
                           value="{{ demande.longueur }}"
                           class="form-control">
                </div>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-md-3 text-end labels">
                Hauteur :
            </div>
            <div class="col-md-9">
                <div class="row" id="demande_hauteur_des_planchers">

                    <div class="col-md-4">
                        <label for="demande_hauteur_0" class="required ">Hauteur libre par rapport au faîtage</label>
                        <input type="text" id="demande_hauteur_0" class="form-control"
                               value="{{ 'Faîtage' in demande.hauteur|keys ? demande.hauteur['Faîtage'] : '' }}"
                               name="demande[hauteur][Faîtage]" required="required"
                               placeholder="en m">
                    </div>
                    <div class="col-md-4">
                        <label for="demande_hauteur_1" class="required">Hauteur totale depuis le sol</label>
                        <input type="text" id="demande_hauteur_1" class="form-control"
                               value="{{ 'Sol' in demande.hauteur|keys ? demande.hauteur['Sol'] : '' }}"
                               name="demande[hauteur][Sol]" required="required"
                               placeholder="en m">
                    </div>

                    <div class="col-md-4">
                        <label for="demande_hauteur_2" class="required">Autre</label>
                        <input type="text" id="demande_hauteur_2" class="form-control"
                               name="demande[hauteur][Autre]" required="required"
                               value="{{ 'Autre' in demande.hauteur|keys ? demande.hauteur['Autre'] : '' }}"
                               placeholder="Autre">
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-md-3 text-end labels">
                Ammarages :
            </div>
            <div class="col-md-9">
                <div id="demande_ammarages" class="row">
                    <div class="col-md-4">

                        <input type="checkbox" id="demande_ammarages_0" name="demande[ammarages][]"
                               value="Ancrages simples" {{ "Ancrages simples" in demande.ammarages ? "checked" :"" }}>
                        <label for="demande_ammarages_0" class="required">Ancrages simples</label>
                    </div>
                    <div class="col-md-4">

                        <input type="checkbox" id="demande_ammarages_1"
                               name="demande[ammarages][]" {{ "Cravatages" in demande.ammarages ? "checked" :"" }}
                               value="Cravatages">
                        <label for="demande_ammarages_1" class="required">Cravatages</label>
                    </div>

                    <div class="col-md-4">

                        <input type="checkbox" id="demande_ammarages_3"
                               name="demande[ammarages][]" {{ "Autre"  in demande.ammarages ? "checked" :"" }}
                               value="Autre">
                        <label for="demande_ammarages_3" class="required">Autre</label>
                    </div>

                    {% if "Autre"  in demande.ammarages %}

                        {% for val in demande.ammarages %}
                            {% if val !="Ancrages simples" and val != "Cravatages" and val != "Autre" %}
                                <div class="col-md-12 mt-2">
                                    <input type="text" id="demande_ammarages_autre" name="demande[ammarages][]" class="form-control"
                                           value="{{ val }}">
                                </div>
                            {% endif %}
                        {% endfor %}
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-md-3 text-end labels">
                Traitement des pignons :
            </div>
            <div class="col-md-9">
                <div id="demande_traitementDesPignons" class="row">
                    <div class="col-md-4
">
                        <input type="radio" id="demande_traitementDesPignons_0" name="demande[traitementDesPignons]"
                               required="required" {{ "Echafaudage"  == demande.traitementDesPignons ? "checked" :"" }}
                               value="Echafaudage">
                        <label for="demande_traitementDesPignons_0" class="required">Structure en échafaudage</label>
                    </div>
                    <div class="col-md-5">
                        <input type="radio" id="demande_traitementDesPignons_1" name="demande[traitementDesPignons]"
                               required="required" {{ "Hors fourniture" == demande.traitementDesPignons ? "checked" :"" }}
                               value="Hors fourniture">
                        <label for="demande_traitementDesPignons_1" class="required">Autre système hors fourniture (hors
                            étude)</label>
                    </div>
                    <div class="col-md-3">
                        <input type="radio" id="demande_traitementDesPignons_2" name="demande[traitementDesPignons]"
                               required="required" {{ "Bache" == demande.traitementDesPignons ? "checked" :"" }}
                               value="Bache">
                        <label for="demande_traitementDesPignons_2" class="required">Bâche</label>
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-5 text-center">
            <button class="btn btn-primary profile-button" type="submit">Enregistrer</button>
        </div>

    </div>
</div>
