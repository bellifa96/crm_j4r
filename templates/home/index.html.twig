{% extends 'base.html.twig' %}

{% block title %}DashBoard{% endblock %}
    {% block javascripts %}
        {{ encore_entry_script_tags('chart') }}
        {{ encore_entry_script_tags('app') }}

    {% endblock %}
{% block body %}

    <section class="section">
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Calendrier</h4>
                    </div>
                    <div class="card-body">
                        <div id='calendar'></div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Bar Chart</h4>
                    </div>
                    <div class="card-body">
                        <canvas id="bar"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </section>


    <div class="example-wrapper">


        <section class="section">
            <div class="row">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Bar Chart</h4>
                        </div>
                        <div class="card-body">
                            <canvas id="bar"></canvas>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Line Chart</h4>
                        </div>
                        <div class="card-body">
                            <canvas id="line"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </section>

    </div>

{% endblock %}

