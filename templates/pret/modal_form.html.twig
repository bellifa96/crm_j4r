<div class="modal fade col-md-4" id="add-pret" data-bs-backdrop="static"
     data-bs-keyboard="false" tabindex="-1"
     aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog  modal-dialog-centered">
        <div class="modal-content">
            <form class="form-control" method="POST" onsubmit="return submitPret(event)" id="pret-form" >

                <div class="modal-header">
                    <h5 class="modal-title"
                        id="exampleModalLabel">Prêt :</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" id="modal-body">
                    <div class="row mt-3">
                        <div class="col-md-12"><label class="labels">Prêter à </label>
                            {{ form_widget(form.utilisateur,{"attr":{"class":"form-control","autofocus":"on"}}) }}
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-md-6"><label class="labels">Date de début du prêt</label>
                            {{ form_widget(form.dateDAffectation,{"attr":{"class":"form-control"}}) }}
                        </div>

                        <div class="col-md-6"><label class="labels">Date de restitution</label>
                            {{ form_widget(form.dateDeRetour,{"attr":{"class":"form-control"}}) }}
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-4"><label class="labels">Etat du matériel</label>
                            {{ form_widget(form.etat,{"attr":{"class":"form-control"}}) }}
                        </div>

                        <div class="col-md-8"><label class="labels">Commentaire</label>
                            {{ form_widget(form.note,{"attr":{"class":"form-control"}}) }}
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <div id="footer-load" style="display: none;">

                        <div class="spinner-border text-primary" role="status">
                            <span class="sr-only"></span>
                        </div>
                    </div>

                    <div id="modal_button">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler
                        </button>

                        <button type="submit" class="btn btn-primary submit" value="create"
                                name="create_new_pret"
                                id="create_new_pret" onclick="$('#modal_button').hide();$('#footer-load').show();">
                            Enregistrer
                        </button>
                    </div>

                </div>
            </form>
        </div>
    </div>
</div>
